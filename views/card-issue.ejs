<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Card Issuance</title>
    <link rel="stylesheet" href="/output.css">
</head>
<body>
       <%- include('includes/header admin'); -%> 

    <div class="container mx-auto p-4 bg-gray-50">
        <h1 class="text-xl font-bold mb-4">Pending Card Applications</h1>
        <table class="table-auto w-full">
            <thead>
                <tr>
                    <th class="border px-4 py-2">Application ID</th>
                    <th class="border px-4 py-2">Name</th>
                    <th class="border px-4 py-2">Submission Date</th>
                    <th class="border px-4 py-2">Active</th>
                    <th class="border px-4 py-2">Application Status</th>
                    <th class="border px-4 py-2">Actions</th>
                </tr>
            </thead>
            <tbody>
                <% cards.forEach(card => { %>
                    <tr>
                        <td class="border px-4 py-2"><%= card.ApplicationID %></td>
                        <td class="border px-4 py-2"><%= card.User.PersonalInformation.FirstName + ' ' + card.User.PersonalInformation.LastName %></td>
                        <td class="border px-4 py-2"><%= new Date(card.SubmissionDate).toISOString().slice(0, 10) %></td>
                        <td class="border px-4 py-2"><%= card['IdentityCards.Active'] %></td>
                        <td class="border px-4 py-2"><%= card.ApplicationStatus %></td>
                        <td class="border px-4 py-2">
                            <a href="/application-review/<%= card.ApplicationID %>" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-1 px-2 rounded text-xs">View</a>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</body>
</html>
