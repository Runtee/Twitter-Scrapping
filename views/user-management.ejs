<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Management</title>
    <link href="/output.css" rel="stylesheet">

</head>
<body class="bg-gray-200">
    <div class="min-h-screen flex flex-col">
        <%- include('includes/header admin'); -%> 

        <div class="flex-grow p-5">
            <div class="flex items-center justify-between mb-5">
            <h1 class="text-xl">User Management</h1>
            <a href="/add-user" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Add User</a>
        </div>
            <div class="overflow-x-auto">
                <table class="min-w-full bg-white rounded-lg shadow-lg">
                    <thead class="bg-gray-300 text-gray-600">
                        <tr>
                            <th class="w-2/12 py-3 px-4 text-left">Username</th>
                            <th class="w-2/6 py-3 px-4 text-left">Email</th>
                            <th class="w-1/6 py-3 px-4 text-left">Role</th>
                            <th class="w-1/6 py-3 px-4 text-left">Status</th>
                            <th class="w-3/12 py-3 px-4 text-left">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="text-gray-700">
                        <% users.forEach(user => { %>
                            <tr>
                                <td class="py-3 px-4"><%= user.Username %></td>
                                <td class="py-3 px-4"><%= user.Email %></td>
                                <td class="py-3 px-4"><%= user.Role %></td>
                                <td class="py-3 px-4"><%= user.Status %></td>
                                <td class="py-3 px-4">
                                    <a href="/edit-user/<%= user.UserID %>" class="text-blue-500 hover:text-blue-600 px-2">View/Edit</a>
                                    <a href="/delete-user/<%= user.UserID %>" class="text-red-500 hover:text-red-600 px-2">Delete</a>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                    
                </table>
            </div>
        </div>
        <%- include('includes/footer'); -%> 

    </div>
</body>
</html>
